<%- layout('layouts/main.ejs') %>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card mt-5 text-center">
                <div class="card-header">
                    <h3>Agregar Drone</h3>
                </div>
                <div class="card-body">
                    <form action="/api-funcionario/create-drone" method="POST">
                        <div class="row g-2">
                                <input type="hidden" name="idFuncio" id="idFuncio" class="form-control" value="6192f2694cf774cdc2db6922">
                            <div class="col-md-6">
                                <label for="nombreDrone" class="form-label">Nombre del Drone</label>
                                <input type="text" name="nombreDrone" id="nombreDrone" class="form-control">
                            </div>
                            <div class="col-md-6">
                                <label for="tipoDrone" class="form-label">Tipo del Drone</label>
                                <input type="text" name="tipoDrone" id="tipoDrone" class="form-control">
                            </div>
                            <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block mt-4 form-control">
                                    Crear Drone
                                </button>
                                <a href="/api-funcionario/get-drones"
                                    class="btn btn-success btn-block mt-3 form-control">Volver</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>